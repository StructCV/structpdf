{
    "name": "@structcv/structpdf",
    "version": "0.1.0",
    "description": "A professional library for embedding and extracting JSON data in PDF files with compression, integrity checking, and validation",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=7.0.0"
    },
    "scripts": {
        "build": "tsc",
        "build:clean": "rm -rf dist && npm run build",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --watchAll=false",
        "lint": "eslint src tests --ext .ts",
        "lint:fix": "eslint src tests --ext .ts --fix",
        "typecheck": "tsc --noEmit",
        "dev": "ts-node src/index.ts",
        "prepublishOnly": "npm run build:clean && npm run typecheck && npm run test:ci"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/StructCV/structpdf.git"
    },
    "homepage": "https://github.com/StructCV/structpdf#readme",
    "bugs": {
        "url": "https://github.com/StructCV/structpdf/issues",
        "email": "support@structcv.com"
    },
    "keywords": [
        "pdf",
        "json",
        "embedded-files",
        "metadata",
        "compression",
        "integrity",
        "structcv",
        "resume",
        "document-processing",
        "typescript"
    ],
    "author": {
        "name": "StructCV",
        "url": "https://structcv.com"
    },
    "license": "MIT",
    "dependencies": {
        "pako": "^2.1.0",
        "pdf-lib": "^1.17.1"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^24.1.0",
        "@types/pako": "^2.0.3",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "eslint": "^8.57.0",
        "glob": "^11.0.3",
        "jest": "^30.0.5",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3"
    },
    "files": [
        "dist/",
        "README.md",
        "LICENSE"
    ]
}
